{
  "expo": {
    "name": "BizBridge",
    "slug": "BizBridge",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "../assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "../assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.bizbridge"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "../assets/images/firefly-logo.png",
        "backgroundColor": "#000000"
      },
      "package": "com.yourcompany.bizbridge"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "../assets/images/firefly-logo.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
